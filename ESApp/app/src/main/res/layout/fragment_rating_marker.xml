<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#E6E6FA"
   >

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome"
                android:id="@+id/textMarketName"
                android:textColor="#000000"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:backgroundTint="#E6E6FA"
        style="?android:attr/actionBarSize"
        android:background="@color/card_background_header"
        android:rating="5.0"
        android:progressTint="@android:color/holo_orange_light"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textMarketName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelbtn"
        android:layout_gravity="start"
        android:text="CANCELAR"
        android:textSize="15dp"
        android:textColor="@color/greenbutton"
        android:layout_alignTop="@+id/buttonSend"
        android:layout_alignStart="@+id/editTextDescricao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:textSize="15dp"
        android:background="#00ffffff"
        android:textColor="@color/greenbutton"
        android:id="@+id/buttonSend"
        android:layout_below="@+id/editTextDescricao"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_marginTop="58dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adicione um comentÃ¡rio"
        android:maxLines="4"
        android:id="@+id/editTextDescricao"
        android:layout_below="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />

</RelativeLayout>