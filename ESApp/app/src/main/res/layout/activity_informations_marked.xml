<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucas.esapp.Activity.InformationsMarkedActivity">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:background="#E6E6FA"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="match_parent"
                android:id="@+id/LinearLayoutFieldName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageViewPhoto"
                    android:layout_gravity="left|top"
                    android:background="#353434"
                    android:src="@drawable/default_image"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nome"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textMarketName"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/imageViewPhoto"
                    android:layout_alignStart="@+id/imageViewPhoto" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:id="@+id/ratingBar"
                    android:progressTint="@android:color/holo_orange_light"
                    android:rating="5.0"
                    android:clickable="true"
                    android:layout_marginLeft="70dp"
                    android:layout_above="@+id/rating_button"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="avaliar"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/rating_button"
                    android:background="#00ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="52dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Informação 1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textCategoria"
                    android:textColor="#696969"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/textDescricao"
                    android:layout_alignStart="@+id/textMarketName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Informação 2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textDescricao"
                    android:paddingTop="30dp"
                    android:textColor="#696969"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/textMarketName"
                    android:layout_alignStart="@+id/textCategoria" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editing"
                    android:id="@+id/edit_button"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/textCategoria"
                    android:layout_alignEnd="@+id/imageViewPhoto" />

            </RelativeLayout>

</RelativeLayout>
